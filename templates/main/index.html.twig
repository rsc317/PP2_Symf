{% extends 'base.html.twig' %}

{% block title %}MyData{% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/sidebars.css') }}"
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/sidebars.js') }}"></script>
        {% endblock %}
{% block body %}
    {% if app.user %}
        <body>
    {{ include('sidenav.html.twig') }}
        <main>
            <div class="container">
                <h1 class="mb-3">My Data</h1>
                <form method="post">
                    {{ form_start(main) }}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(main.email, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_label(main.plainPassword, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_label(main.rPlainPassword, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.rPlainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(main.firstName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_label(main.givenName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.givenName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(main.phoneNumber, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            {{ form_label(main.streetName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.streetName, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-md-3">
                            {{ form_label(main.streetNumber, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.streetNumber, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            {{ form_label(main.city, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_label(main.post_code, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.post_code, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            {{ form_label(main.update) }}
                            {{ form_widget(main.update, {'attr': {'class': 'w-100 btn btn-primary btn-lg'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                        {% if error %}
                            <div class="alert alert-success">{{ error }}</div>
                        {% endif %}
                        </div>
                    </div>
                    {{ form_end(main) }}
                </form>
            </div>
        </main>
        </body>
    {% endif %}
{% endblock %}
