{% extends 'base.html.twig' %}

{% block title %}MyData{% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/sidebars.css') }}"
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/sidebars.js') }}"></script>
            <script src="{{ asset('js/validateInput.js') }}"></script>
        {% endblock %}
{% block body %}
    {% if app.user %}
        <body>
    {{ include('sidenav.html.twig') }}
        <main>
            <div class="container">
                <h1 class="mb-3">My Data</h1>
                <form method="post">
                    {{ form_start(main) }}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(main.email, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.email, {'id': 'email','attr': {'class': 'form-control', 'type': 'email', 'onkeyup' : 'invalidEmail("email")'}}) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_label(main.password, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.password, {'id': 'password','attr': {'class': 'form-control', 'placeholder' : 'Password', 'onkeyup' : 'invalidPassword("password")'}}) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_label(main.rPassword, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.rPassword, {'id': 'r_password','attr': {'class': 'form-control', 'placeholder' : 'Repeat Password', 'onkeyup' : 'matchPasswords("password", "r_password")'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(main.firstName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.firstName, {'id': 'first_name', 'attr': {'class': 'form-control', 'onkeyup' : 'invalidName("first_name")'}}) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_label(main.givenName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.givenName, {'id': 'given_name','attr': {'class': 'form-control', 'onkeyup' : 'invalidName("given_name")'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(main.phoneNumber, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.phoneNumber, {'id': 'phone_number','attr': {'class': 'form-control', 'onkeyup' : 'invalidNumber("phone_number")'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            {{ form_label(main.streetName, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.streetName, {'id': 'street_name','attr': {'class': 'form-control', 'onkeyup' : 'invalidName("street_name")'}}) }}
                        </div>

                        <div class="form-group col-md-3">
                            {{ form_label(main.streetNumber, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.streetNumber, {'id': 'street_number','attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            {{ form_label(main.city, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_label(main.post_code, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(main.post_code, {'id': 'post_code','attr': {'class': 'form-control', 'onkeyup' : 'invalidNumber("post_code")'}}) }}
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12" id="error">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            {{ form_label(main.update) }}
                            {{ form_widget(main.update, {'attr': {'class': 'w-100 btn btn-primary btn-lg'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                        {% if success %}
                            <div class="alert alert-success">{{ success }}</div>
                        {% endif %}
                        </div>
                    </div>
                    {{ form_end(main) }}
                </form>
            </div>
        </main>
        </body>
    {% endif %}
{% endblock %}
